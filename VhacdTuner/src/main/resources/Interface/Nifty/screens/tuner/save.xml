                    <control name="button" label="Save j3o"
                             id="id1ToAvoidNiftyWarning"
                             height="28px"
                             width="*">
                        <interact onRelease="perform(save j3o)"/>
                    </control>
                    <control name="button" label="Save java"
                             id="id2ToAvoidNiftyWarning"
