<!--
Nifty XML to lay out the GUI for the "filePath" screen of VhacdTuner.
-->
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <screen id="filePath" controller="jme3utilities.minie.tuner.FilePathScreen">
        <layer childLayout="vertical"
               backgroundColor="#aaaf">
            <panel childLayout="horizontal" height="28px">
                <panel/>
                <control name="label" text="Step 1:  Locate the model in the file system"
                         color="#000f"/>
                <panel/>
            </panel>
            <panel height="15px"/>
            <panel childLayout="horizontal" height="28px">
                <control name="label" text="  "/>
                <control name="button" label="Browse the file system"
                         id="id1ToAvoidNiftyWarning"
                         color="#000f"
                         width="140px">
                    <interact onRelease="perform(browse)"/>
                </control>
                <panel/>
            </panel>
            <panel/>
            <panel childLayout="horizontal" height="28px">
                <control name="label" text="  Model file:  "
                         color="#000f"/>
                <control name="label" id="filePath"
                         backgroundColor="#ffff"
                         color="#000f"
                         textHAlign="left"
                         width="*"/>
                <control name="label" text="  "/>
            </panel>
            <panel childLayout="horizontal" height="28px">
                <control name="label" id="feedback"
                         color="#800f"
                         width="*"/>
                <control name="button" id="nextButton"
                         label="Next >"
                         width="60px">
                    <interact onRelease="perform(next screen)"/>
                </control>
                <control name="label" text="  "/>
            </panel>
        </layer>
    </screen>
</nifty>